<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/btn_intRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET int" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
                android:id="@+id/tv_int"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </ScrollView>
    <Button
            android:id="@+id/btn_boolRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET bool" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
                android:id="@+id/tv_bool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </ScrollView>
    <Button
            android:id="@+id/btn_floatRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET float" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
                android:id="@+id/tv_float"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </ScrollView>

    <Button
            android:id="@+id/btn_intWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PUT int" />

    <Button
            android:id="@+id/btn_boolWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PUT bool" />

    <Button
            android:id="@+id/btn_floatWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PUT float" />

</LinearLayout>